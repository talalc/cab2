<!DOCTYPE html>
<html>
<head>
  <title>Comic Authority beta2</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body>

  <header>
    <div class="container">
      <%= link_to image_tag('calogo2.png'), root_path %>
      <%= render 'layouts/login' %>
    </div>
  </header>

  <div class="container">
    <% flash.each do |key, value| %>
      <div class="flash"><%= value %><br></div>
    <% end %>

    <%= yield %>

    <%= render 'layouts/footer' %>
  </div>

</body>

</html>