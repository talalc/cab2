<h1>Sign Up</h1>
<% @user.errors.messages.each do |attr, message| %>
  <p>error on <%= attr %><%= message %></p>
<% end %>

<%= form_for(@user) do |f| %>
  <%= f.label(:email) %>
  <%= f.text_field(:email) %>
  <%= f.label(:nick) %>
  <%= f.text_field(:nick) %>
  <%= f.label(:password) %>
  <%= f.password_field(:password) %>
  <%= f.label(:password_confirmation) %>
  <%= f.password_field(:password_confirmation) %>
  <%= f.submit %>
<% end %>